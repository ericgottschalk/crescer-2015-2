@model JogoModel
@{
    ViewBag.Title = "DetalhesJogo";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    @Styles.Render("~/bundles/detalhesjogo")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h4>@Model.Nome</h4>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"></h3>
            @Html.ActionLink("Editar", "ManterJogo", "Jogo", Model, new { @class = "btn btn-default btn-lg" })
        </div>
        <div class="panel-body">
            <img src="@Model.Imagem" class="img-thumbnail">
            <h3>Categoria: @Model.Categoria</h3>
            <h3>Selo: @Model.Selo</h3>
            <h3>Preço: R$@Model.Preco</h3>
            <h3>Descrição: @Model.Descricao</h3>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Vídeo</h3>
        </div>
        <div class="panel-body">
            <iframe width="420" height="315"src=@Model.Video></iframe>
        </div>
    </div>
</body>
</html>

