@model JogoModel
@{
    ViewBag.Title = "Controle de Jogos";
}

<style>
    h2 {
        color: lime;
        text-align: center;
    }

    body {
        background-color: #444;
    }

    label {
        color: lime;
    }

    .panel {
        background-color: black;
    }
</style>

@if (Model == null || Model.Id == null)
{
    <h2>Cadatro de Jogo</h2>
}
else
{
    <h2>Edição Jogo</h2>
}

@if (TempData["Mensagem"] != null)
{
    <h2>@TempData["Mensagem"]</h2>
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Locadora World Games</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Salvar", "Jogo", new { @class = "form-control form-horizontal" }))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(false);

            <div class="form-group">
                @Html.LabelFor(m => m.Nome, new { @class = "col-sm-2 control-label" })
                @Html.TextBoxFor(m => m.Nome, new { @type = "text", @class = "form-control", @placeholder = "Nome" })
                @Html.ValidationMessageFor(m => m.Nome)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Descricao, new { @class = "col-sm-2 control-label" })
                @Html.TextAreaFor(m => m.Descricao, new { @type = "text", @class = "form-control", @placeholder = "Descrição" })
                @Html.ValidationMessageFor(m => m.Descricao)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Preco, new { @class = "col-sm-2 control-label" })
                @Html.TextBoxFor(m => m.Preco, new { @type = "text", @class = "form-control", @placeholder = "Preço" })
                @Html.ValidationMessageFor(m => m.Preco)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Categoria, new { @class = "col-sm-2 control-label" })
                @Html.EnumDropDownListFor(m => m.Categoria, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Categoria)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Selo, new { @class = "col-sm-2 control-label" })
                @Html.EnumDropDownListFor(m => m.Selo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Selo)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Imagem, new { @class = "col-sm-2 control-label" })
                @Html.TextBoxFor(m => m.Imagem, new { @type = "text", @class = "form-control", @placeholder = "URL Imagem" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Video, new { @class = "col-sm-2 control-label" })
                @Html.TextBoxFor(m => m.Video, new { @type = "text", @class = "form-control", @placeholder = "URL Vídeo" })
            </div>

            <div class="form-group">
                <button class="btn btn-success btn-lg" type="submit">Salvar</button>
            </div>
        }
    </div>
</div>


