@model string
@{
    ViewBag.Title = "World Games";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        h3 {
            font: bold 25px arial;
            color: lime;
        }

        body {
            background-color: #444;
        }

        .panel {
            margin-top: 20px;
            text-align: center;
            background-color: black;
        }

        .btn {
            margin: 5px;
            margin-top: 50px;
            background-color: lime
        }

        .jumbotron{
            background-color: #444;
            width: 400px;
			text-align: center;
			margin: auto;
			margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Locadora World Games</h3>
        </div>
        <div class="panel-body">
            <img src="~/Content/banner.jpg" />
        </div>
    </div>

    <div class="jumbotron">
        @using (Html.BeginForm("JogosDisponiveis", "Relatorio", new { @class = "form-control" }))
        {
            string nome = null;
            @Html.TextBoxFor(m => nome, new { @type = "text", @class = "form-control", @placeholder = "Nome" })
            <button class="btn btn-success btn-lg" type="submit">Buscar por nome</button>
            @Html.ActionLink("Mostrar Todos", "JogosDisponiveis", "Relatorio", new { area = "" }, new { @class = "btn btn-success btn-lg" })
        }
    </div>
</body>
</html>
