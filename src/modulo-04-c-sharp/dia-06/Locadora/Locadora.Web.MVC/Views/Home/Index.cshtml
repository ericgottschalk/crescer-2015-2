@model String
@{
    ViewBag.Title = "World Games";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    @Styles.Render("~/bundles/index")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Locadora World Games</h3>
        </div>
        <div class="panel-body">
            <img src="~/Content/banner.jpg" />
        </div>
    </div>

    <div class="jumbotron">
        @using (Html.BeginForm("JogosDisponiveis", "RelatorioJogo", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <input type="text" class="form-control" name="nome" value="" />
            </div>

            <input class="btn btn-default btn-lg" type="submit" name="enviar" value="Buscar" />
            @Html.ActionLink("Mostrar Todos", "JogosDisponiveis", "RelatorioJogo", new { area = "" }, new { @class = "btn btn-default btn-lg" })
        }
    </div>
</body>
</html>


