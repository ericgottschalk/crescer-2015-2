@{
    ViewBag.Title = "World Games";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        h3 {
            font: bold 25px arial;
            color: lime;
        }

        body {
            background-color: #444;
        }

        .panel {
            margin-top: 20px;
            text-align: center;
            background-color: black;
        }

        .btn {
