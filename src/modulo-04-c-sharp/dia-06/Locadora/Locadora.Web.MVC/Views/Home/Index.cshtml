            <img src="@Url.Content("banner.jpg")" />
        </div>
    </div>

    <div style="text-align: center">
        @Html.ActionLink("Mostrar Jogos", "JogosDisponiveis", "Relatorio", new { area = "" }, new { @class="btn btn-success btn-lg" })
