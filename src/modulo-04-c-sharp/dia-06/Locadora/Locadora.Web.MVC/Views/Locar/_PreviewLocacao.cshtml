@model LocacaoModel

@Styles.Render("~/bundles/detalhesjogo")
@Scripts.Render("~/bundles/modernizr")
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Detalhes Locacao</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <img class="img-thumbnail" src=@Model.ImagemJogo />
            </div>
            <div class="col-md-6">
                <h4>Nome: @Model.NomeJogo</h4>
                <h3>Data prevista para entrega: @Model.DataPrevista.ToString()</h3>
                <h3>Valor: @Model.Valor.ToString("C")</h3>  
            </div>
        </div>       
    </div>
</div>
