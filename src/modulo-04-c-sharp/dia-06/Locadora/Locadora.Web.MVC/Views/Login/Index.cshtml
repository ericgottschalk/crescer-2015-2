@model UsuarioModel
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewBag.Title = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style>
        .jumbotron {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="jumbotron">

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Email ou senha invalidos")

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "email@email.com" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Senha, new { @type = "text", @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Senha, new { @type = "password", @class = "form-control", @placeholder = "********" })
                    @Html.ValidationMessageFor(m => m.Senha)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default btn-lg">Login</button>
                </div>
            </div>
        }
    </div>
    @section Scripts {
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    }
</body>
</html>
