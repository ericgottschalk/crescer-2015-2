@model UsuarioModel
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewBag.Title = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style>
        .panel {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"></h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-control form-horizontal" }))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary(false);

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => Model.Senha, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default btn-lg">Login</button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
